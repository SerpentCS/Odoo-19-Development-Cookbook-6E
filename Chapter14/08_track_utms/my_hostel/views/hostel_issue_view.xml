<odoo>
    <record id="view_hostel_issue_list" model="ir.ui.view">
            <field name="name">hostel.issue.list</field>
            <field name="model">hostel.issue</field>
            <field name="arch" type="xml">
                <list string="Hostel Issue">
                    <field name="create_date"/>
                    <field name="student_id"/>
                    <field name="room_id"/>
                </list>
            </field>
        </record>

    <record id="view_hostel_issue_form" model="ir.ui.view">
        <field name="name">hostel.issue.form</field>
        <field name="model">hostel.issue</field>
        <field name="arch" type="xml">
            <form string="Hostel Issue">
                <sheet>
                <group>
                    <group string="Issue Info">
                        <field name="create_date"/>
                        <field name="student_id"/>
                        <field name="room_id"/>
                    </group>
                    <group string="Marketing">
                        <field name="campaign_id"/>
                        <field name="medium_id"/>
                        <field name="source_id"/>
                    </group>
                 </group>
                  <group>
                        <field name="issue_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action: Tree/List View -->
    <record id="action_hostel_issue_list" model="ir.actions.act_window">
        <field name="name">Hostel Issues</field>
        <field name="res_model">hostel.issue</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No issues yet. Nice!</p>
        </field>
    </record>

    <!-- Submenu: Issue Management -->
    <menuitem id="menu_hostel_issue_root"
              name="Issues"
              parent="my_hostel.hostel_main_menu"
              sequence="3"
              action="my_hostel.action_hostel_issue_list"/>
</odoo>
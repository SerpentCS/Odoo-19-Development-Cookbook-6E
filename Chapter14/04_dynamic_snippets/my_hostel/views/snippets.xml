<odoo>

    <template id="snippet_hostel_card" name="Hostel Card">
        <section class="pt-3 pb-3 s_custom_snippet">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 pt16 pb16">
                        <h1>This is Hostel Card Block</h1>
                        <p>
                            Learn snippet development quicky with examples
                         </p>
                        <a class="btn btn-primary" href="#" >Hostel Details</a>
                    </div>
                    <div class="col-lg-6 pt16 pb16">
                        <img
                          src="/my_hostel/static/src/img/cover.png"
                          class="mx-auto img-thumbnail w-50 img img-fluid shadow"/>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!--Dynamic Snippets-->
    <template id="snippet_hostel_dynamic" name="Hostel Dynamic">
        <section class="hostel_list">
            <div class="container">
                <h2>Hostel</h2>
                <table class="table hostel_snippet table-striped">
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                    </tr>
                </table>
            </div>
        </section>
    </template>

    <template id="hostel_snippets_options" inherit_id="website.snippets">
        <xpath expr="//t[@id='installed_snippets_hook']" position="after">
            <t snippet-group="Custom" t-snippet="website.s_snippet_group" string="Custom"
                t-thumbnail="/my_hostel/static/src/img/s_hostel_thumb.svg"/>
        </xpath>
        <xpath expr="//t[@id='blog_posts_hook']" position="after">
            <t t-snippet="my_hostel.snippet_hostel_card" string="Hostel Card" group="Custom"/>
            <t t-snippet="my_hostel.snippet_hostel_dynamic" string="Hostel Dynamic Card" group="Custom"/>
        </xpath>
    </template>

    <template id="s_custom_snippet_options" inherit_id="website.snippet_options" name="Custom- Snippets Options">
        <xpath expr="." position="inside">
            <div dats-js="HostelSnippet" data-selector=".hostel_list" data-target=".tabel">
                <we-select string="Table Style">
                    <we-button data-select-class="table-striped">Striped</we-button>
                    <we-button data-select-class="table-bordered">Bordered</we-button>
                    <we-button data-select-class="table-dark">Dark</we-button>
                    <we-button data-select-class="">None</we-button>
                </we-select>
                <we-title>Space</we-title>
                <we-button-group string="Before">
                    <we-button data-select-class="mt-0">1</we-button>
                    <we-button data-select-class="mt-3">2</we-button>
                    <we-button data-select-class="mt-5">3</we-button>
                </we-button-group>
            </div>
        </xpath>
    </template>

</odoo>
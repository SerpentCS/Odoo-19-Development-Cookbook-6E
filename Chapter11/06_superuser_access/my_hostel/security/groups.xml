<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_other">
        <field name="name">Other</field>
        <field name="sequence">100</field>
    </record>

    <record model="res.groups.privilege" id="res_groups_other">
        <field name="name">Hostel</field>
        <field name="category_id" ref="my_hostel.module_category_other"/>
    </record>

    <record id="group_hostel_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="privilege_id" ref="res_groups_other"/>
    </record>

    <record id="group_hostel_manager" model="res.groups">
        <field name="name">Hostel Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_hostel_user'))]"/>
        <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/>
        <field name="privilege_id" ref="res_groups_other"/>
    </record>

    <record id="group_start_date" model="res.groups">
        <field name="name">Hostel: Start date feature</field>
    </record>


</odoo>